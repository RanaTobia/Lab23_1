
@model ShopDBContext

@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Shop</h1>


<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>

    </tr>

    @foreach (Items items in Model.Items)
    {
        <tr>
            <td>@items.Name</td>
            <td>@items.Description</td>
            <td>@items.Price</td>
            <td>@items.Quantity</td>

            @if ((bool)TempData["username"] == true)
            {
                <td><button>BUY</button ></td>

            }

        </tr>
    }

</table>

